@model KitapDostu.Models.Kullanici
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<h2>Login</h2>
<div>
    @using (Html.BeginForm("Login", "Giris", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(o => o.Ad);
            @Html.TextBoxFor(o => o.Ad, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.Ad)
        </div>
        <div class="form-group">
            @Html.LabelFor(o => o.Sifre);
            @Html.TextBoxFor(o => o.Sifre, new { @type="password",@class = "form-control" })
            @Html.ValidationMessageFor(o => o.Sifre)
        </div>
        <input type="submit" name="button" value="Giriş Yap" class="btn btn-danger" />

        @Html.ActionLink("Kayıt ol", "Kayit", "Kulanici")
    }
</div>